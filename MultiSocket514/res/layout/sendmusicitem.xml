<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvchannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左声道：占用"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cbleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选歌" />

        <Button
            android:id="@+id/btleftsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />

        <TextView
            android:id="@+id/tvleftname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐名" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvchannel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右声道：占用"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cbright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbleft" />

        <Button
            android:id="@+id/btright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选歌" />

        <Button
            android:id="@+id/btrightsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />

        <TextView
            android:id="@+id/tvrightname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐名" >
        </TextView>
    </LinearLayout>

</LinearLayout>